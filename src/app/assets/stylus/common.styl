@require './index.styl'


.column
  margin: 0 auto
  width: 100%
  propertyMargin('padding-left')
  propertyMargin('padding-right')
  max-width: (900px + (2 * $minMargin))

  +from($sml)
    max-width: (900px + (2 * $smlMargin))

  +from($med)
    max-width: (900px + (2 * $medMargin))

  +from($lge)
    max-width: (900px + (2 * $lgeMargin))

  +from($xlg)
    max-width: (900px + (2 * $xlgMargin))

.overlay
  color: $backgroundColor
  text-shadow: 1px 1px 16px $textColor

.fit
  height: 100%
  width: 100%
  object-fit: contain

.button
  display: inline-block
  padding: 0
  border: none
  background: transparent
  text-align: left
  font: inherit
  appearance: none
  cursor: pointer

  &:focus
    outline: none

.styleguide
  line-height: 1.25

  h1
    margin-bottom: 16px
    font-size: 48px
    text-align: center

  h2
    margin-bottom: 12px
    font-size: 36px

  em
    font-style: italic

.paragraph
  font-size: 18px
  text-indent: 2em

  &:not(:last-child)
    margin-bottom: 0.5em
