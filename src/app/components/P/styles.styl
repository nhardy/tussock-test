@import '~app/assets/stylus'


.root
  transform: translateY(-0.5em)
  opacity: 0
  transition: transform 1000ms 0ms cubic-bezier(0.75, 0, 0.25, 1), opacity 250ms 750ms linear

.visible
  transform: translateY(0)
  opacity: 1
  transition: transform 1000ms cubic-bezier(0.75, 0, 0.25, 1), opacity 250ms linear
