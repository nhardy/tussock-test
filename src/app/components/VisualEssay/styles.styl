@import '~app/assets/stylus'


.root
  position: relative
  min-height: 100vh

.stationary
  position: absolute
  left: 0
  right: 0
  z-index: 1
  height: 100vh
  width: 100%

.top
  top: 0

.fixed
  position: fixed
  top: 0
  bottom: 0

.bottom
  bottom: 0

.slides
  position: relative
  z-index: 2

.slide
  padding-top: 40vh
  padding-bottom: 40vh

  &:first-child
    padding-top: 100vh
