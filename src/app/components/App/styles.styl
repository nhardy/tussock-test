@import '~app/assets/stylus'


html
body
:global(#root)
  height: 100%

html
  text-size-adjust: 100%

body
  color: $textColor

a
  color: inherit
  text-decoration: underline

  &:hover
    text-decoration: none

:global(#root)
  font-family: $fontStack

:global(#nprogress)
  pointer-events: none

  :global(.nprogress-bar)
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 3px
    background: $themeColor
    z-index: $zIndexNprogress

  :global(.nprogress-peg)
    display: block;
    position: absolute;
    right: 0px;
    width: 100px;
    height: 100%;
    box-shadow: 0 0 10px $themeColor, 0 0 5px $themeColor;
    opacity: 1;
    transform: rotate(3deg) translate(0px, -4px);
